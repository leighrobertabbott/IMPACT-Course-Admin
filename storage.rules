rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow authenticated users to upload their own profile photos
    match /candidate-photos/{candidateId}/{fileName} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && 
        request.resource.size < 5 * 1024 * 1024 && // 5MB max
        request.resource.contentType.matches('image/.*');
    }
    
    // Allow admins to upload course materials
    match /course-materials/{fileName} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && 
        request.resource.size < 50 * 1024 * 1024 && // 50MB max
        request.resource.contentType.matches('application/pdf|image/.*|video/.*|audio/.*|text/.*');
    }
    
    // Allow admins to upload faculty photos
    match /faculty-photos/{facultyId}/{fileName} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && 
        request.resource.size < 5 * 1024 * 1024 && // 5MB max
        request.resource.contentType.matches('image/.*');
    }
    
    // Allow admins to read all files
    match /{allPaths=**} {
      allow read: if request.auth != null;
    }
  }
}
